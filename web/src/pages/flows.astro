---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="font-sans">
    <div class="max-w-6xl mx-auto">
      <header class="mb-12 flex justify-between items-end">
        <div>
          <h1 class="text-4xl font-bold text-white mb-2">Automations</h1>
          <p class="text-gray-400 text-lg max-w-2xl">
            Create linear sequences pointing across remote agents to compose
            complex features.
          </p>
        </div>
        <button
          class="bg-blue-600 hover:bg-blue-500 text-white font-medium py-2 px-4 rounded transition-colors flex items-center text-sm"
        >
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"></path>
          </svg>
          New Flow
        </button>
      </header>

      <div
        id="flows-grid"
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
      >
        <!-- Loader during initial fetch -->
        <div
          class="col-span-full flex justify-center py-20 rounded-lg bg-[#1e2124] border border-gray-700/50"
        >
          <div class="animate-pulse flex flex-col items-center">
            <div
              class="w-8 h-8 border-2 border-blue-500 border-t-transparent rounded-full animate-spin mb-4"
            >
            </div>
            <p class="text-gray-400 text-sm">Loading data from postgres...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const grid = document.getElementById("flows-grid");

  async function fetchFlows() {
    try {
      const response = await fetch("http://localhost:8080/flows");
      if (!response.ok) throw new Error("Failed fetching flows");
      const flows = await response.json();

      renderFlows(flows);
    } catch (error) {
      console.error("Error API:", error);
      if (grid) {
        grid.innerHTML = `
                <div class="col-span-full py-12 text-center bg-red-900/10 rounded-3xl border border-red-500/20 backdrop-blur-md">
                    <p class="text-red-400">Failed to fetch flows from backend. Is the server running?</p>
                </div>
            `;
      }
    }
  }

  function renderFlows(flows) {
    if (!grid) return;

    if (flows.length === 0) {
      grid.innerHTML = `
        <div class="col-span-full py-12 text-center bg-[#1e2124] rounded-lg border border-gray-700 border-dashed">
          <p class="text-gray-400">No pipelines active</p>
        </div>
      `;
      return;
    }

    grid.innerHTML = flows
      .map(
        (flow) => `
      <div class="bg-[#1e2124] rounded-lg border border-gray-700/80 shadow-sm hover:border-gray-600 flex flex-col h-full transition-colors">
        <div class="p-6 flex-grow">
          <h3 class="text-xl font-bold text-white mb-2">${flow.name}</h3>
          
          <p class="text-gray-400 text-sm mb-4">
             ${flow.description || "No description provided."}
          </p>
          
          <div class="text-xs font-mono text-gray-500 truncate block">
             ID: ${flow.id}
          </div>
        </div>
        
        <div class="px-6 py-4 border-t border-gray-700/80 bg-black/20 mt-auto flex gap-2">
           <button class="flex-1 bg-white hover:bg-gray-200 text-black font-medium py-1.5 px-3 rounded text-sm transition-colors" onclick="window.executeFlow('${
             flow.id
           }')">
             Execute
           </button>
           <button class="flex-none bg-gray-700 hover:bg-gray-600 text-white p-1.5 rounded transition-colors" title="Flow Options">
             <svg class="w-4 h-4 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path></svg>
           </button>
        </div>
      </div>
    `,
      )
      .join("");
  }

  window.executeFlow = async function (id) {
    if (
      !confirm(
        "Are you sure you want to trigger this execution with an empty initial payload?",
      )
    )
      return;
    try {
      const response = await fetch(
        `http://localhost:8080/flows/${id}/execute`,
        {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ payload: {} }),
        },
      );
      const result = await response.json();
      alert(
        "Flow executed! Final result: \n" + JSON.stringify(result, null, 2),
      );
    } catch (error) {
      alert("Execution failed! See console.");
      console.error(error);
    }
  };

  document.addEventListener("DOMContentLoaded", fetchFlows);
</script>
