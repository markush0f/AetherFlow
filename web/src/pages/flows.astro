---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="font-sans">
    <div class="max-w-6xl mx-auto">
      <header class="mb-12 flex justify-between items-end">
        <div>
          <h1 class="text-4xl font-bold text-white mb-2">Automations</h1>
          <p class="text-gray-400 text-lg max-w-2xl">
            Create linear sequences pointing across remote agents to compose
            complex features.
          </p>
        </div>
        <button
          class="bg-blue-600 hover:bg-blue-500 text-white font-medium py-2 px-4 rounded transition-colors flex items-center text-sm"
        >
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"></path>
          </svg>
          New Flow
        </button>
      </header>

      <div
        id="flows-grid"
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
      >
        <!-- Loader during initial fetch -->
        <div
          class="col-span-full flex justify-center py-20 rounded-lg bg-[#1e2124] border border-gray-700/50"
        >
          <div class="animate-pulse flex flex-col items-center">
            <div
              class="w-8 h-8 border-2 border-blue-500 border-t-transparent rounded-full animate-spin mb-4"
            >
            </div>
            <p class="text-gray-400 text-sm">Loading data from postgres...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const grid = document.getElementById("flows-grid");

  async function fetchFlows() {
    try {
      const response = await fetch("http://localhost:8080/flows");
      if (!response.ok) throw new Error("Failed fetching flows");
      const flows = await response.json();

      renderFlows(flows);
    } catch (error) {
      console.error("Error API:", error);
      if (grid) {
        grid.innerHTML = `
                <div class="col-span-full py-12 text-center bg-red-900/10 rounded-3xl border border-red-500/20 backdrop-blur-md">
                    <p class="text-red-400">Failed to fetch flows from backend. Is the server running?</p>
                </div>
            `;
      }
    }
  }

  function renderFlows(flows) {
    if (!grid) return;

    if (flows.length === 0) {
      grid.innerHTML = `
        <div class="col-span-full py-12 text-center bg-gray-800/20 rounded-2xl border border-gray-800 border-dashed">
          <p class="text-gray-400">No flows found in the database.</p>
        </div>
      `;
      return;
    }

    grid.innerHTML = flows
      .map(
        (flow) => `
      <div class="bg-[#111318] border border-gray-800 rounded-2xl shadow-sm hover:border-indigo-500/40 hover:shadow-[0_4px_20px_-4px_rgba(99,102,241,0.1)] transition-all duration-300 flex flex-col h-full overflow-hidden">
        <div class="p-6 flex-grow flex flex-col">
          <div class="flex items-center gap-3 mb-5">
            <div class="bg-indigo-500/10 text-indigo-400 p-2 rounded-lg border border-indigo-500/20">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path></svg>
            </div>
            <h3 class="text-xl font-bold text-gray-100 tracking-tight">${
              flow.name
            }</h3>
          </div>
          
          <p class="text-gray-400 text-sm mb-6 leading-relaxed">
             ${flow.description || "No description provided."}
          </p>
          
          <div class="bg-gray-800/30 p-3 rounded-xl border border-gray-800/60 mb-6">
             <span class="text-gray-500 text-[10px] uppercase font-bold tracking-wider block mb-1">Flow UUID</span>
             <span class="font-mono text-xs text-gray-300 block truncate">${
               flow.id
             }</span>
          </div>

          <div class="mt-auto pt-4 border-t border-gray-800/60">
             <span class="text-gray-500 text-[10px] uppercase font-bold tracking-wider block mb-3">Agent Sequence</span>
             ${
               flow.agents_chain && flow.agents_chain.length > 0
                 ? `
               <div class="flex flex-wrap items-center gap-2">
                 ${flow.agents_chain
                   .map(
                     (slug, idx) => `
                    <div class="flex items-center gap-2">
                      <span class="bg-indigo-500/10 text-indigo-400 border border-indigo-500/20 px-2.5 py-1 rounded text-xs font-semibold tracking-wide capitalize">
                        ${slug.replace("-", " ")}
                      </span>
                      ${
                        idx < flow.agents_chain.length - 1
                          ? `
                        <svg class="w-4 h-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                      `
                          : ""
                      }
                    </div>
                 `,
                   )
                   .join("")}
               </div>
             `
                 : `
               <span class="text-gray-500 text-sm italic">No agents connected to this pipeline yet.</span>
             `
             }
          </div>
        </div>
        
        <div class="px-6 py-4 bg-gray-900/50 border-t border-gray-800 flex gap-3">
           <button class="flex-1 bg-white hover:bg-gray-200 text-gray-900 font-semibold py-2 px-4 rounded-xl text-sm transition-all shadow-sm active:scale-[0.98]" onclick="window.executeFlow('${
             flow.id
           }')">
             Trigger Execute
           </button>
           <button class="flex-none bg-[#111318] hover:bg-gray-800 text-gray-400 hover:text-white p-2 border border-gray-800 rounded-xl transition-all" title="Manage Config">
             <svg class="w-5 h-5 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
           </button>
        </div>
      </div>
    `,
      )
      .join("");
  }

  window.executeFlow = async function (id) {
    if (
      !confirm(
        "Are you sure you want to trigger this execution with an empty initial payload?",
      )
    )
      return;
    try {
      const response = await fetch(
        `http://localhost:8080/flows/${id}/execute`,
        {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ payload: {} }),
        },
      );
      const result = await response.json();
      alert(
        "Flow executed! Final result: \n" + JSON.stringify(result, null, 2),
      );
    } catch (error) {
      alert("Execution failed! See console.");
      console.error(error);
    }
  };

  document.addEventListener("DOMContentLoaded", fetchFlows);
</script>
