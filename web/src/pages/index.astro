---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="font-sans">
    <div class="max-w-6xl mx-auto">
      <header class="mb-10">
        <h1 class="text-4xl font-bold text-white mb-2">Dashboard</h1>
        <p class="text-gray-400">
          Monitor and command your AetherFlow agents connected to the Rust
          Gateway.
        </p>
      </header>

      <div
        id="agent-grid"
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
      >
        <!-- Loader during initial connection -->
        <div
          class="col-span-full flex justify-center py-20 bg-[#1e2124] rounded-lg border border-gray-700/50 shadow-sm"
        >
          <div class="animate-pulse flex flex-col items-center">
            <div
              class="w-8 h-8 border-2 border-blue-500 border-t-transparent rounded-full animate-spin mb-4"
            >
            </div>
            <p class="text-gray-400 text-sm">Connecting to WebSockets...</p>
          </div>
        </div>
      </div>

      <div id="connection-status" class="mt-8 text-center text-sm">
        <!-- Status dynamically injected -->
      </div>
    </div>
  </div>
</Layout>

<script>
  const grid = document.getElementById("agent-grid");
  const statusEl = document.getElementById("connection-status");

  // Create beautiful UI badges based on the agent's actual status
  function getStatusBadge(status) {
    if (status === "Ready") {
      return `
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-500/20 text-green-400">
          Ready
        </span>
      `;
    } else if (status === "Pending") {
      return `
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-500/20 text-yellow-400">
          Pending
        </span>
      `;
    } else if (status === "Unreachable") {
      return `
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-500/20 text-red-400">
          Unreachable
        </span>
      `;
    } else {
      return `
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-500/20 text-gray-400">${status}</span>
      `;
    }
  }

  // Draw the agent cards using Tailwind for rich aesthetics
  function renderAgents(agents) {
    if (!grid) return;

    // Sort agents by slug to keep the interface orderly
    agents.sort((a, b) => a.slug.localeCompare(b.slug));

    if (agents.length === 0) {
      grid.innerHTML = `
        <div class="col-span-full py-12 text-center bg-gray-800/50 rounded-2xl border border-gray-700 border-dashed">
          <p class="text-gray-400">No agents found in the AetherFlow database.</p>
        </div>
      `;
      return;
    }

    grid.innerHTML = agents
      .map(
        (agent) => `
      <div class="bg-[#1e2124] rounded-lg border border-gray-700/80 shadow-sm hover:border-gray-600 transition-colors flex flex-col h-full">
        <div class="p-5 flex-grow">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-bold text-white capitalize">${agent.slug.replace(
              "-",
              " ",
            )}</h3>
            ${getStatusBadge(agent.status)}
          </div>
          
          <div class="space-y-3">
            <div>
              <span class="text-gray-500 text-xs font-medium block mb-0.5">UUID</span>
              <span class="font-mono text-xs text-gray-400 block truncate">${
                agent.id
              }</span>
            </div>
            
            <div>
              <span class="text-gray-500 text-xs font-medium block mb-0.5">Target</span>
              <span class="text-blue-400 block text-sm truncate">${
                agent.endpoint
              }</span>
            </div>
            
            ${
              agent.source
                ? `
            <div>
              <span class="text-gray-500 text-xs font-medium block mb-0.5">Source</span>
              <span class="text-sm text-gray-300 block truncate">
                ${agent.source}
              </span>
            </div>
            `
                : ""
            }
          </div>
        </div>
        
        <div class="px-5 py-3 border-t border-gray-700/80 bg-black/20 mt-auto flex gap-2">
           <button class="flex-1 bg-white hover:bg-gray-200 text-black font-medium py-1.5 px-3 rounded text-sm transition-colors" onclick="alert('Execute task on ${
             agent.slug
           }')">
             Execute
           </button>
           <button class="flex-none bg-gray-700 hover:bg-gray-600 text-white p-1.5 rounded transition-colors" title="Settings">
             <svg class="w-4 h-4 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
           </button>
        </div>
      </div>
    `,
      )
      .join("");
  }

  function connect() {
    if (statusEl) {
      statusEl.innerHTML =
        '<span class="text-yellow-500">Connecting to Gateway...</span>';
    }

    const ws = new WebSocket("ws://localhost:8080/ws");

    ws.onopen = () => {
      if (statusEl) {
        statusEl.innerHTML =
          '<span class="text-green-500">Connected to AetherFlow WebSocket Endpoint</span>';
      }
    };

    ws.onmessage = (event) => {
      try {
        const agents = JSON.parse(event.data);
        renderAgents(agents);
      } catch (e) {
        console.error("Failed to parse agents JSON", e);
      }
    };

    ws.onclose = () => {
      if (statusEl) {
        statusEl.innerHTML =
          '<span class="text-red-500">Connection lost. Reconnecting...</span>';
      }
      setTimeout(connect, 3000);
    };

    ws.onerror = (err) => {
      console.error("WebSocket error:", err);
    };
  }

  // Start the heartbeat connection
  // Ensure script only runs on the client by waiting for DOM
  document.addEventListener("DOMContentLoaded", connect);
</script>
